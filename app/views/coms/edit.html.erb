<h1>Edit Comment</h1>



<%= form_for @com do |form| %>

  <div class="field">
    
    <%= form.text_area :content %>
  </div>

  <div class="field">
    
    <%= form.hidden_field :post_id, value: @com.post_id %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, value: session[:user_id] %>
  </div>


  <div class="actions">
    <%= form.submit "Submit comment", class: "send" %>
  </div>
<% end %>
