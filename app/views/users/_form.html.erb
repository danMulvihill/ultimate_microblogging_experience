
<%= form_for @user do |form| %>

  <div class="field">
    <%= form.label(:fname, "First Name") %>
    <%= form.text_field :fname, required: "required" %>
  </div>

  <div class="field">
    <%= form.label(:lname, "Last Name") %>
    <%= form.text_field :lname, required: "required" %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  
  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, required: "required" %>
  </div>


  <div class="actions">
    <%= form.submit "Send info", class: "send" %>
  </div>
  
<% end %>