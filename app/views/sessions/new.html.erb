
<div class="container">

<% if !session[:user_id] %>

    <h1>Log in</h1>

    <%= form_for(:session, url: login_path) do |form| %>

      <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email %>
      </div>

      <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password %>
      </div>

      <div class="actions">
        <%= form.submit "Log in", class: "send" %>
      </div>
    <% end %>

<% else %>

    <%= form_for(:session, url: logout_path) do |form| %>

      <div class="actions">
        <%= form.submit "Log out", class: "send" %>
      </div>
    <% end %>

<% end %>


</div>